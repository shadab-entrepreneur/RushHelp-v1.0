<Page
    x:Class="TempApp.donationform"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TempApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <GridView >
        <StackPanel>
            <Image x:Name="image" Height="330" Margin="10,0,23,0" Source="Assets/Blood Donation.jpg" Width="385"/>

            <TextBlock FontSize="24" >
            	<Run Text="ContactNumber"/>
            	<Run Text=" :"/>
            </TextBlock>
            <TextBox x:Name="contact" Height="41" Width="402"/>
            <TextBlock FontSize="24" >
            	<Run Text="BloodGroup"/>
            	<Run Text=" :"/>
            </TextBlock>
            <TextBox x:Name="group"/>
            <TextBlock Name="Missing" FontSize="20"/>
            <Button x:ConnectionId='1' x:Name="button" Content="Request For blood" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                      />


        </StackPanel>


    </GridView>
</Page>

